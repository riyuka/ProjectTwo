<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">

	<header>
		<% include ../partials/header %>
		<% include ../partials/accountLogIn %>
	</header>
	


	<main>
		<div class="petDetail">
			<div class="petDetailTitle">
				<h2>Facts about <%= name %></h2>
			</div>
			<div class="petDetailDiv">
				<div class="petDetailLeft">
					<div id="petInfo">
						<span class="boldText"> ID# </span> <span class="factText"> <%= pet_id %> </span><br>
						<span class="boldText"> Animal Type:</span> <span class="factText"> <%= type %> </span><br>
						<span class="boldText"> Breed:</span> <span class="factText"> <%= breed %> </span><br>
						<span class="boldText"> Age:</span> <span class="factText"> <%= age %> </span><br>
						<span class="boldText"> Sex:</span> <span class="factText"> <%= sex %> </span><br>
						<span class="boldText"> Weight:</span> <span class="factText"> <%= weight %> </span><br>
						<span class="boldText"> Color:</span> <span class="factText"> <%= color %> </span><br>
						<span class="boldText"> About <%= name %>:</span> <span class="factText">  <%= bio %> </span>
					</div>
				</div>
				<div class="petDetailRight">
					<div id="petPicDiv">
						<img class ="petImg" src="<%= img %>">
					</div>
				</div>
			</div>
		</div>	
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>

	<!-- jquery and bootstrap js scripts -->
	<% include ../partials/jqueryBootstrapScripts %>
	
</body>
</html>